<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground"
    android:orientation="vertical"
    tools:context="com.example.rakeshvasal.myapplication.Fragments.FacebookFragments.FacebookHomeDashboard">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/freindlist"
                style="@style/MyLinearayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get FreindList"
                android:textSize="@dimen/activity_text_size" />

            <TextView
                android:id="@+id/feed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get Feeds"
                android:textSize="@dimen/activity_text_size"
                style="@style/MyLinearayoutStyle"/>

            <TextView
                android:id="@+id/post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get Posts"
                android:textSize="@dimen/activity_text_size"
                style="@style/MyLinearayoutStyle"/>

            <TextView
                android:id="@+id/photos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get Photos"
                android:textSize="@dimen/activity_text_size"
                style="@style/MyLinearayoutStyle"/>

            <TextView
                android:id="@+id/tagfreind"
                style="@style/MyLinearayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get Taggable Freinds"
                android:textSize="@dimen/activity_text_size" />

            <TextView
                android:id="@+id/appfreinds"
                style="@style/MyLinearayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get Freinds on App"
                android:textSize="@dimen/activity_text_size" />

            <TextView
                android:id="@+id/userbio"
                style="@style/MyLinearayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Bio"
                android:textSize="@dimen/activity_text_size" />

        </LinearLayout>
    </ScrollView>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>
